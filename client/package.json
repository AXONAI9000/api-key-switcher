{
  "name": "api-key-switcher",
  "version": "1.0.0",
  "description": "一个用于管理和切换多个 AI 服务商 API Key 的桌面工具",
  "main": "dist/main/main/index.js",
  "bin": {
    "api-key-switcher": "./dist/cli/cli/index.js"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:cli": "tsc -p tsconfig.cli.json",
    "start": "electron .",
    "cli": "node dist/cli/index.js",
    "package": "electron-builder",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "api-key",
    "switcher",
    "electron",
    "claude",
    "openai",
    "gemini"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.32",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "commander": "^11.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "regedit": "^5.1.4"
  },
  "build": {
    "appId": "com.api-key-switcher.app",
    "productName": "API Key Switcher",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico",
      "artifactName": "API-Key-Switcher.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
